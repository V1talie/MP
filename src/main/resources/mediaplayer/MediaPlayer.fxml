                                        <Insets bottom="10.0" />
                                    </HBox.margin>
                                </Slider>
                        <Pane prefHeight="50.0" prefWidth="12.0" />
                        <VBox alignment="CENTER" prefHeight="50.0" prefWidth="121.0">
                           <children>
                              <Button fx:id="saveButtonID" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#saveMem" prefHeight="25.0" prefWidth="101.0" text="Save Time">
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                              </Button>
                              <Button fx:id="loadButtonID" mnemonicParsing="false" onAction="#loadMem" prefHeight="25.0" prefWidth="106.0" text="Load last" />
                           </children>
                        </VBox>
                            </children>
                        </HBox>
                    </children>
                    <StackPane.margin>
                        <Insets />
                    </StackPane.margin>
                </VBox>
            </children>
        </StackPane>
    </center>
