                                        <Insets bottom="7.0" right="7.0" />
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="f5ButtonID" mnemonicParsing="false" onAction="#skip5" text="+5s">
                                    <HBox.margin>
                                        <Insets bottom="7.0" right="7.0" />
                                    </HBox.margin>
                                </Button>
                                <Slider fx:id="volumeSlider">
